<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<IsTestProject>true</IsTestProject>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
		<LangVersion>12</LangVersion>
	</PropertyGroup>

	<!-- 🧩 TEST I FRAMEWORKS -->
	<ItemGroup>
		<PackageReference Include="Reqnroll" Version="3.2.0" />
		<PackageReference Include="Reqnroll.NUnit" Version="3.2.0" />
		<PackageReference Include="Reqnroll.Tools.MSBuild.Generation" Version="3.2.0" />
		<PackageReference Include="NUnit" Version="4.4.0" />
		<PackageReference Include="NUnit3TestAdapter" Version="5.2.0" />
		<PackageReference Include="Microsoft.NET.Test.Sdk" Version="18.0.0" />
	</ItemGroup>

	<!-- 🧩 ALLURE REPORTING -->
	<ItemGroup>
		<PackageReference Include="Allure.Net.Commons" Version="2.14.1" />
		<PackageReference Include="Allure.Reqnroll" Version="2.14.1" />
	</ItemGroup>

	<!-- 🧩 SELENIUM I BROWSER DRIVERS -->
	<ItemGroup>
		<PackageReference Include="Selenium.WebDriver" Version="4.34.0" />
		<PackageReference Include="Selenium.Support" Version="4.34.0" />
		<PackageReference Include="Selenium.WebDriver.ChromeDriver" Version="141.0.7390.12200" />
		<PackageReference Include="Selenium.Firefox.WebDriver" Version="0.27.0" />
		<PackageReference Include="Selenium.WebDriver.MSEdgeDriver" Version="141.0.3537.71" />
	</ItemGroup>

	<!-- 🧩 KONFIGURACIJA I UTILITIES -->
	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.Configuration" Version="9.0.0" />
		<PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="9.0.0" />
		<PackageReference Include="Bogus" Version="35.6.4" />
	</ItemGroup>

	<!-- 🧩 FILES TO COPY -->
	<ItemGroup>
		<None Update="appsettings.json">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
		<None Update="allureConfig.json">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
		<None Update="reqnroll.json">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
	</ItemGroup>

	<!-- 🧩 ANALYZER + FEATURE FILES -->
	<ItemGroup>
		<Analyzer Include="$(NuGetPackageRoot)\reqnroll.analyzers\**\Reqnroll.Analyzers.dll" />
	</ItemGroup>

	<ItemGroup>
		<SpecFlowFeatureFiles Include="Features\*.feature" />
	</ItemGroup>

</Project>
